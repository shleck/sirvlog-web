                |  Search powered by
                a(target="_blank", href='http://lucene.apache.org/core/old_versioned_docs/versions/2_9_1/queryparsersyntax.html')
                    |  Apache Lucene
                script(src='bootstrap/js/bootstrap.min.js')
                // angular
                script(src='js/angular-1.0.4/angular.min.js')
                script(src='js/angular-1.0.4/angular-resource.js')
                script(src='js/angular-ui-bootstrap/ui-bootstrap-tpls-0.2.0.min.js')
