html(ng-app="SirvLog")
    head
        meta(charset='utf8')
        title(ng-bind="'#{title} ' + subTitle")= title
        link(rel='stylesheet', href='bootstrap/css/bootstrap.min.css')
        link(rel='stylesheet', href='bootstrap/css/bootstrap-responsive.min.css')
        //- link(rel='stylesheet', href='css/jquery-ui-bootstrap/jquery-ui-1.10.0.custom.css');
        link(rel='stylesheet', href='css/main.css')
        // jquery
        script(src='js/jquery-1.9.1.min.js')
        script(src='js/jquery-ui-1.10.1.custom.min.js')
        // underscore
        script(src='js/underscore-min.js')

    body
//-        div(ng-controller='MenuCtrl').navbar.navbar-fixed-top
            div.navbar-inner
                div.container
                    a(data-toggle='collapse',data-target='.nav-collapse').btn.btn-navbar
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                        a(href='#').brand #{title}
                        div.nav-collapse
                            ul.nav
                                li.dropdown
                                    a.dropdown-toggle
                                        | Searches
                                        b.caret
                                    ul.dropdown-menu
                                        li
                                            a(href='#') Default
                                        li.divider
                                        li(ng-repeat='(index, search) in searches')
                                            a(ng-click='searchLink(index)') {{search.name}}

        div.container-fluid
            block content
            hr
            footer
